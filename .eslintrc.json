{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "always"
            }
         ],
         "no-underscore-dangle": ["error", { "allow": ["_id"] }]
    }
}
